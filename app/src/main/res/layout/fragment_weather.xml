<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhenmin.weatherpeiyi.fragment.Weather">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#87CEFA"
        android:layout_height="30dp"
        >

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:id="@+id/locate"
                android:textColor="#FFFAFA"
                android:text="广州"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFAFA"
                android:text="2015年12月25日"
                android:id="@+id/time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="周一"
                android:textColor="#FFFAFA"
                android:id="@+id/time_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="#87CEFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/pic"
            android:src="@drawable/a3"
            android:layout_width="200dp"
            android:layout_height="240dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/pic"
            android:layout_centerHorizontal="true"
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFAFA"
            android:textSize="16sp"
            android:text="温度"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/temperature"
            android:layout_centerHorizontal="true"
            android:id="@+id/weather_and_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFAFA"
            android:text="天气 温度范围"/>
        <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/weather_and_temperature"
        android:layout_centerHorizontal="true"
        android:id="@+id/air_wead"
        android:textColor="#FFFAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="空气湿度50%"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/air_wead"
            android:layout_centerHorizontal="true"
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#FFFAFA"
            android:text="风力"/>

        <TextView
            android:layout_below="@id/wind"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<LinearLayout

    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/mon"
            android:text="Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mon"
            android:id="@+id/monWeather"
            android:layout_width="40dp"
            android:src="@drawable/a3"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/dataMon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/monWeather"
            android:text="高/低"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tue"
            android:text="Tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tue"
            android:id="@+id/tueWeather"
            android:layout_width="40dp"
            android:src="@drawable/a3"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/tueWeather"
            android:layout_centerHorizontal="true"
            android:id="@+id/dataTue"
            android:text="高/低"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/wed"
        android:text="Wed"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@id/wed"
        android:id="@+id/wedWeather"
        android:layout_centerHorizontal="true"
        android:layout_width="40dp"
        android:src="@drawable/a3"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/wedData"
        android:layout_below="@id/wedWeather"
        android:layout_centerHorizontal="true"
        android:text="高/低"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/thu"
        android:text="Thu"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@id/thu"
        android:id="@+id/thuWeather"
        android:layout_width="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/a3"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/thuWeather"
        android:id="@+id/thuData"
        android:layout_centerHorizontal="true"
        android:text="高/低"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

</LinearLayout>


</LinearLayout>
