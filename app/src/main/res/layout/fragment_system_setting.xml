<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhenmin.weatherpeiyi.fragment.SystemSetting">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView

            android:text="城市名称 : "
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/setting_cityName_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/setting_cityName_value"
            android:layout_width="fill_parent"
            android:hint="填入城市名称"
            android:background="@drawable/shape"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_height="35dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="更新频率 : "
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/setting_refresh_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_alignLeft="@id/setting_refresh_key"
                android:id="@+id/setting_refresh_value"
                android:layout_width="180dp"
                android:hint="填入更新频率"
                android:background="@drawable/shape"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_height="35dp" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:text=" 秒/次"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>


        </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="提供短信服务"
            android:id="@+id/setting_smsServe_key"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_alignParentRight="true"
            android:id="@+id/cb_smsServe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="记录短信服务数据信息 "
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/setting_recordData_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_alignParentRight="true"
            android:id="@+id/cb_recordData_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="短信服务关键字 : "
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/setting_serveKeyword_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/setting_serveKeyword_value"
            android:layout_width="fill_parent"
            android:hint="填入关键字"
            android:background="@drawable/shape"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_height="35dp" />
    </LinearLayout>
    <Button
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape"
        android:id="@+id/saveSetting"
        android:text="应用系统设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/button_shape"
        android:layout_below="@id/saveSetting"
        android:layout_marginTop="20dp"
        android:id="@+id/concelSetting"
        android:text="取消系统设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
